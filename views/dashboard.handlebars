    <div class="container">
        <div class="col-md-6">
            <h2>Patient Request</h2>
            <hr>
            <form class="create-form add-patient" action="/dashboard/update-patient/{{this.patient_id}}?_method=PUT" method="POST">
                <div class="form-group">

                    <label for="diagnosis"class="col-md-4 control-label">Diagnosis:</label>
                    <div class="col-md-8">
                    <input type="text" name="diagnosis" id="diagnosis" placeholder="Current Diagnosis">
                    </div>

                    <label for="current_doctor" class="col-md-4 control-label">Current Doctor:</label>
                    <div class="col-md-8">
                        <select data-placeholder="" name="current_doctor" class="doctors-select" id="doctor">
                            {{#each doctors}}
                                <option value="{{this.bestdoc_id}}">{{this.first_name}} {{this.last_name}},{{this.title}}</option>
                            {{/each}}
                        </select>
                    </div>
