<div class="container">
    <div class="col-md-6">
        <h2>Patient Request</h2>
        <hr>
        <form class="create-form add-patient" action="/" method="POST">
            <div class="form-group">
                <label for="patient_name" class="col-md-4 control-label">Name:</label>
                <div class="col-md-8">
                <input type="text" name="patient_name" id="patient_name" placeholder="Full Name" required>
                </div>

                <label for="email" class="col-md-4 control-label">E-mail:</label>
                <div class="col-md-8">
                <input type="text" name="email" id="email" placeholder="E-Mail" required>
                </div>

                <label for="current_doctor" class="col-md-4 control-label">Current Doctor:</label>
                <div class="col-md-8">
                <input type="text" name="current_doctor" id="current_doctor" placeholder="Doctor's Name">
                </div>
                
                <label for="diagnosis"class="col-md-4 control-label">Diagnosis:</label>
                <div class="col-md-8">
                <input type="text" name="diagnosis" id="diagnosis" placeholder="Current Diagnosis">
                </div>

                <hr>

                <h4>What type of specialist are you looking for?</h4>
                <select data-placeholder="" name="speciality" class="speciality-select" id="speciality">
                    <option value="oncology">Oncology</option>
                    <option value="cardiology">Cardiology</option>
                    <option value="obstetrics">Obstetrics</option>
                    <option value="rheumatology">Rheumatology</option>
                </select>
                <br>
                <button type="submit" class="btn btn-primary">Submit Information</button>
            </div>
        </form>
    </div>

<!--Results Panel-->  
    <div class="col-md-6 doc-results">
        <h2>Your Second Opinion</h2>
        <!-- displays the doctor data. I pulled the dot notation from the schema file. LM-->

            <span>Doctor Name: Bruce Banner, MD</span>
            <span> Specialty: Kicking Ass, Taking Names</span>

        <hr>
    </div>

<!-- end container -->    
</div>
