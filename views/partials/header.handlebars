<header class="header-hs">

<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
   		<a class="navbar-brand" href="/">
        <img class="logo" alt="Brand" src="assets/betterLogonewback.jpg"></a>
    </div>
    
    <div class="col-md-3 col-md-offset-3 navbar-text navbar-right">
    {{#if user}}
      <p class="user-text">Welcome, {{user.firstname}} {{user.lastname}}</p>
      <p><a href="/logout">Log Out</a></p>
    {{else}}
      <button class="btn btn-default btn-md" data-target="#login-modal" data-toggle="modal" type="button">Login</button>
      <button class="btn btn-default btn-md" data-target="#register-modal" data-toggle="modal" type="button">Register</button> 
    {{/if}}
  </div>


</nav>

</header>