            		<img src="https://media.giphy.com/media/kJbFZ0Zj7mTza/giphy.gif" class="img responsive center meds" alt="cats">

                	{{#each patients}}
                			<form action="/?_method=DELETE" method="POST">
                                    <p class="patient"> 1 </p>
                                    <p class="patient"> {{this.firstname}} {{this.lastname}} </p>
                                    <p class="patient"> {{this.currentdoctor}} </p>
                                    <p class="patient"> Messed up face </p>
                                    <p><input type="hidden" name="patient-info" value="1">
                                    <button class="btn-primary" type="submit">Delete Patient? <span class="glyphicon glyphicon-trash" aria-hidden="true"></span></button></p>
                			</form>

                	{{/each}}
            </div>
        {{else}}

            <img src="https://media.giphy.com/media/njYrp176NQsHS/giphy.gif" class="img-responsive center gandalf" alt="no">

